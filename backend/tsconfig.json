{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Module System */
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Interoperability */
    "esModuleInterop": true,

    /* Build Performance */
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
